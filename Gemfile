source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.4'
gem 'mysql2'
gem 'bundler'
gem 'rails_config'

# authentications
gem 'devise', github: 'plataformatec/devise'
gem 'omniauth'
gem 'omniauth-facebook'

# admin / backend
gem 'activeadmin', github: 'gregbell/active_admin'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.2'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer', platforms: :ruby
gem 'bootstrap-sass', github: 'twbs/bootstrap-sass'
gem 'bootstrap-sass-extras'

# Use jquery as the JavaScript library
gem 'jquery-rails'
gem 'jquery-ui-rails', '~> 5.0'
gem 'turbolinks'
gem 'ckeditor'


# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'


# tools
gem 'friendly_id', '~> 5.0.1'
gem 'google-analytics-rails'
gem 'simple_form'
gem 'geocoder'
gem 'acts-as-messageable', github: 'LTe/acts-as-messageable'
gem 'acts-as-taggable-on'
gem 'acts_as_votable', github: 'ryanto/acts_as_votable'


# additional validation helper
gem 'validates_formatting_of'


# for handling attachment
gem 'paperclip', github: 'thoughtbot/paperclip'


# Handling backgroud job
gem 'delayed_job' #, github: 'collectiveidea/delayed_job'
gem 'delayed_job_active_record', github: 'collectiveidea/delayed_job_active_record'


group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


group :development, :test do
  gem 'pry'
  gem 'annotate'
  gem 'quiet_assets'
end



